doctype
html(lang='en')
  head
    meta(charset='utf-8')
    title BP-tooltip
    link(rel="stylesheet", href="/assets/css/BP-tooltip.min.css", attr)
    link(rel="stylesheet", href="/assets/css/index.css", attr)
  body
    .Main
      .Header
      .Body
        .Left
        .Middle
          - for (var x = 1; x < 16; x++)
            .grid
              .gheader
              .gbody
              .gfooter
                .button(data-bp-tooltip="This is a tooltip example for button "+x)
                  span Hello
        .Right
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js")
  script(src="/assets/js/BP-tooltip.min.js")
